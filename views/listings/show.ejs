<% layout('/layouts/boilerplate') -%>

<div class="row">

    <div class="col-8 offset-3 mb-3 mt-5">
        <h1>Listing Details</h1>
    </div>
    <div class="card col-6 offset-3 show-card">
        <img src="<%= list.image %>" class="card-img-top show-img" alt="Listing Image">
        <div class="card-body">
            <p class="card-text">
                <b><%= list.title %></b><br>
                <%= list.description %><br>
                &#8377; <%= list.price.toLocaleString("en-IN") %><br>
                <%= list.location %><br>
                <%= list.country %><br>
            </p>
        </div>
    </div>
    <br>

</div>

<div class="btns mb-5">

    <a href="/listings/<%= list._id %>/edit" class="btn btn-dark add-btn col-1 offset-3">Edit</a>
    <form method="POST" action="/listings/<%= list._id %>?_method=DELETE">
        <button type="submit" class="btn btn-dark offset-4">Delete</button>
    </form>

</div>

<div class="col-8 offset-3">
    <hr/>
    <h1 class="mb-3">Leave a Review</h1>
    <form action="/listings/<%= list._id %>/reviews" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="rating">Rating</label>
            <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range"/>
        </div>
        <div>
            <label for="comment" class="mb-2">Comments</label>
            <textarea id="comment" name="review[comment]" rows="5" cols="30" class="form-control" required></textarea>
        </div>
        <div class="invalid-feedback">Please add some comments</div>
        <button type="submit" class="btn btn-dark add-btn mt-3 mb-5">Submit</button>
    </form>

    <hr/>

    <h4 class="mb-2">Reviews</h4>
    <% for(let review of list.reviews){ %>

        <li><%= review.comment %> : stars - <%= review.rating %></li>

    <% } %>

</div>

