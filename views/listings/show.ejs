<% layout('/layouts/boilerplate') -%>

<div class="container my-5">

  <!-- Listing Card -->
  <div class="d-flex justify-content-center mb-5">
    <div class="listing-card rounded-4">
      <img src="<%= list.image %>" class="listing-img rounded-top" alt="Listing Image">

      <div class="p-4">
        <!-- Owner -->
        <small class="text-muted d-block mb-1">
          <i class="bi bi-person-circle"></i> 
          <b><i>Owned By : </i></b> <%= list.owner && list.owner ? list.owner.username : "Unknown" %>
        </small>

        <!-- Title -->
        <h2 class="fw-semibold text-primary mb-1"><%= list.title %></h2>

        <!-- Description -->
        <p class="text-secondary mb-3" style="font-size: 0.95rem;">
          <%= list.description %>
        </p>

        <!-- Location -->
        <p class="mb-1">
          <b><%= list.location %></b> , <%= list.country %>
        </p>

        <!-- Price -->
        <p class="fw-bold fs-5 mb-3 text-dark">
          â‚¹ <%= list.price.toLocaleString("en-IN") %> 
          <span class="fw-normal fs-6 text-muted">/ night</span>
        </p>

        <% if(current && current._id.equals(list.owner._id)){ %>
        <div class="d-flex justify-content-between">
          <a href="/listings/<%= list._id %>/edit" class="btn btn-warning px-4 fw-semibold">Edit</a>
          <form method="POST" action="/listings/<%= list._id %>?_method=DELETE">
            <button type="submit" class="btn btn-danger px-4 fw-semibold">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Review Form -->
    <div class="mx-auto mb-5" style="max-width: 700px;">
      <% if(current){ %>
      <h3 class="fw-bold mb-3 text-center">Leave a Review</h3>
      <form action="/listings/<%= list._id %>/reviews" method="POST" class="p-4 rounded-4 bg-light">
        <div class="mb-3">
          <label for="rating" class="form-label fw-bold"></label>
          <fieldset class="starability-coinFlip">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating."/>
            <input type="radio" id="first-rate1" name="review[rating]" value="1"/>
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2"/>
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3"/>
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4"/>
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5"/>
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>
        <div class="mb-3">
          <label for="comment" class="form-label fw-bold">Comments</label>
          <textarea id="comment" name="review[comment]" rows="4" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments</div>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-dark px-5">Submit</button>
        </div>
      </form>
      <% } %>
    </div>

  <!-- Reviews Section -->
  <div class="reviews-section mx-auto" style="max-width: 900px;">
    <h3 class="fw-bold mb-4 text-center">Reviews</h3>

    <% if(list.reviews.length === 0){ %>
      <p class="text-center text-muted">No reviews yet. Be the first to review !</p>
    <% } else { %>
      <div class="row g-4">
        <% for(let review of list.reviews){ %>
          <div class="col-md-6">
            <div class="card shadow-sm rounded-4 h-100 p-3">
              <div class="card-body">
                <!-- Reviewer Name -->
                <h5 class="card-title mb-2">
                  <i class="bi bi-person-fill"></i> <%= review.author ? review.author.username : "Anonymous" %>
                </h5>

                <p class="starability-result" data-rating="<%= review.rating %>">
                  Rated : 3 stars
                </p>

                <!-- Review Comment -->
                <p class="card-text text-secondary" style="text-align: justify;">
                  <%= review.comment %>
                </p>

                <!-- Delete Button -->
                <form class="mt-2" method="POST" action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE">
                  <% if(current && review.author && current._id.equals(review.author._id)){ %>
                  <button class="btn btn-sm btn-outline-danger">
                    <i class="bi bi-trash"></i> Delete
                  </button>
                  <% } %>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

</div>
