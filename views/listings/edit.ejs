<% layout('/layouts/boilerplate') -%>

<br><br>
<div class="row">
    <div class="col-8 offset-2">
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>
       
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>        
        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required></input>
        </div>
        
        <div class="mb-3">
        <label for="title" class="form-label">Description</label>        
        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
        </div>
        
        <div class="mb-3">
        <label for="title" class="form-label">Image Link</label>        
        <input type="text" name="listing[image]" value="<%= listing.image %>" class="form-control" required></input>
        </div>
        
        <div class="row">
           
            <div class="mb-3">
            <label for="title" class="form-label">Price</label>
            <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control" required></input>
            </div>

            <div class="mb-3 col-md-8">
            <label for="title" class="form-label">Country</label>                
            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required></input>
            </div>

        </div>

        <div class="mb-3">
        <label for="title" class="form-label">Location</label>       
        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required></input>
        </div>        

        <button type="submit" class="btn btn-dark add-btn">Add</button>
        <br><br><br>
        
    </form>

    </div>
</div>
<script src="/js/script.js"></script>

